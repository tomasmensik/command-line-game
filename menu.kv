

<MenuWidget>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, .8
        Rectangle:
            size: self.size
    Label:
        font_size: dp(60)
        font_name: 'Sackers-Gothic-Std-Light.ttf'
        text: root.parent.menu_title
        pos_hint: { "center_x": .5, "center_y": .8}
    Button:
        font_size: dp(30)
        font_name: 'Eurostile.ttf'
        text: root.parent.menu_button_levels
        pos_hint: { "center_x": .5, "center_y": .55}
        size_hint: .15, .13
        on_press: root.parent.on_level_button_pressed()
        background_normal: ''
        background_color: 0, 250, 250, .85
    Button:
        font_size: dp(30)
        font_name: 'Eurostile.ttf'
        text: root.parent.menu_button_settings
        pos_hint: { "center_x": .5, "center_y": .35}
        size_hint: .15, .13
        on_press: root.parent.on_settings_button_pressed()
        background_normal: ''
        background_color: 0, 250, 250, .85
    Button:
        font_size: dp(30)
        font_name: 'Eurostile.ttf'
        text: root.parent.menu_button_credits
        pos_hint: { "center_x": .5, "center_y": .15}
        size_hint: .15, .13
        on_press: root.parent.on_credits_button_pressed()
        background_normal: ''
        background_color: 0, 250, 250, .85
